{% extends 'base.html.twig' %}

{% block body %}
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Feed</th>
            <th>URL</th>
        </tr>
        </thead>
        <tbody>
        {% for feed in feeds %}
            <tr>
                <td>
                    <a href="{{ path('feed_show', {
                        'feedName': feed.name
                    }) }}">{{ feed.name }}</a>
                </td>
                <td>{{ feed.url }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}